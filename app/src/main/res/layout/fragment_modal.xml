<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="350dp"
    android:layout_width="325dp"
    android:background="@drawable/modal_rounded_edge"
    android:layout_gravity="center">

    <TextView
        android:clickable="true"
        android:id="@+id/close_modal_button"
        android:onClick="closeModal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="X"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Test Modal"
        android:textSize="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/step_forward_block"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/step_forward"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/left_turn"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/right_turn"/>
        </LinearLayout>

    </ScrollView>





</LinearLayout>